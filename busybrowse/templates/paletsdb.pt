<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content"
    class="content paletdb-view"
    i18n:domain="busybrowse">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Palets Database</h3>
      </div>
      <div class="panel-body">

        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Palet Title</th>
              <th>Products</th>
              <th>Price of products</th>
            </tr>
          </thead>
          <tbody>
            <tr tal:repeat="palet palets">
              <td>${palet.unique_id}</td>
              <td><a href="${request.resource_url(palet)}">${palet.title}</a></td>
              <td>${palet.number_of_products()}</td>
              <td>${'{:.2f}'.format(palet.price_of_products())}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="panel-footer">
      </div>
    </div>

  </article>
</html>
